{
  "name": "CallodineTradingApp",
  "version": "0.1.8",
  "description": "Callodine Trading Application",
  "main": "main.js",
  "author": "Taylor Wood",
  "scripts": {
    "start": "electron .",
    "predist": "R-Portable/App/R-Portable/bin/Rscript.exe -e \"if (!requireNamespace('renv', quietly=TRUE)) install.packages('renv', repos='https://cloud.r-project.org'); renv::consent(provided=TRUE); renv::restore(library=normalizePath('R-Portable/App/R-Portable/library', winslash='/'), prompt=FALSE)\"",
    "dist": "electron-builder"
  },
  "devDependencies": {
    "electron": "^36.3.2",
    "electron-builder": "^24.13.3"
  },
  "dependencies": {
    "electron-log": "^5.4.0",
    "electron-updater": "^6.6.2"
  },
  "build": {
    "appId": "com.callodine.tradingapp",
    "productName": "CallodineTradingApp",
    "publish": [
      {
        "provider": "github",
        "owner": "twood886",
        "repo": "Callodine_Trading_App"
      }
    ],
    "directories": {
      "output": "dist"
    },
    "asar": false,
    "files": [
      "main.js",
      "preload.js",
      "app/**",
      "main.R",
      "rhino.yml",
      "config.yml",
      "DESCRIPTION"
    ],
    "extraResources": [
      {
        "from": "R-Portable/",
        "to": "R-Portable/",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "target": [
        "nsis",
        "zip"
      ],
      "forceCodeSigning": false
    }
  }
}
